{
    "compilerOptions": {
        "allowJs": true,
        "lib": ["es6"],
        "target": "es2017",
        "module": "NodeNext",
        "moduleResolution": "Node",
        "outDir": "dist",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "sourceMap": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
